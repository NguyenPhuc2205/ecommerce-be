{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",

    "outDir": "./scripts/dist",
    "rootDir": "./scripts",

    "strictNullChecks": false,
    "noImplicitAny": false,

    "declaration": false,
    "sourceMap": false,

    "removeComments": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "scripts/dist"]
}
