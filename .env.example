# ================================================================
# ENVIRONMENT VARIABLES
# ================================================================
NODE_ENV=development
APP_DOMAIN=localhost
APP_PORT=3000
APP_NAME=Ecommerce App

# ================================================================
# API CONFIGURATION
# ================================================================
API_KEY=your_api_key_here_at_least_10_chars
API_PREFIX=/app/api
API_VERSION=v1
API_URL=http://localhost:3000/app/api

# ================================================================
# CORS CONFIGURATION (Cross-Origin Resource Sharing)
# ================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:4200,https://yourdomain.com

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/dbname?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=ecommerce

# ================================================================
# AUTH CONFIGURATION
# ================================================================
JWT_ACCESS_TOKEN_SECRET=your_access_token_secret_here_at_least_32_chars
JWT_ACCESS_TOKEN_EXPIRATION_TIME=1h
JWT_ACCESS_TOKEN_WITH_REMEMBER_ME_EXPIRATION_TIME=30d
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_at_least_32_chars
JWT_REFRESH_TOKEN_EXPIRATION_TIME=7d

# ================================================================
# BCRYPT CONFIGURATION - HASHING
# ================================================================
BCRYPT_SALT_ROUNDS=10

# ================================================================
# LOGGING CONFIGURATION
# ================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ================================================================
# GOOGLE CONFIGURATION
# ================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here

# ================================================================
# CLOUDINARY CONFIGURATION
# ================================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ================================================================
# REDIS CONFIGURATION
# ================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ================================================================
# SESSION CONFIGURATION
# ================================================================
SESSION_SECRET=your_session_secret_here_at_least_32_chars
SESSION_MAX_AGE=86400000

# ================================================================
# RATE LIMITING
# ================================================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# ================================================================
# FILE UPLOAD
# ================================================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ================================================================
# ADMINISTRATOR INFORMATION
# ================================================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin1234

# ================================================================
# OTP CONFIGURATION
# ================================================================ 
OTP_EXPIRATION=10m
OTP_DEFAULT_LENGTH=6
OTP_MAX_LENGTH=8
OTP_MIN_LENGTH=4
OTP_MAX_ATTEMPTS=5
OTP_MAX_RESEND_COUNT=3
OTP_RATE_LIMIT_PER_HOUR=10
OTP_RATE_LIMIT_TTL=3600

# ================================================================
# EMAIL SERVICE - RESEND
# Should verify domain: https://resend.com/docs/domains/verify-domain
# ================================================================
RESEND_API=your_resend_api_key_here
RESEND_FROM_EMAIL=no-reply@yourdomain.com
RESEND_FROM_NAME=Ecommerce app
RESEND_CC_EMAIL=cc@yourdomain.com
RESEND_BCC_EMAIL=bcc@yourdomain.com
RESEND_REPLY_TO_EMAIL=support@yourdomain.com
RESEND_ENABLED_TESTING_MODE=false

# ================================================================
# EMAIL TEMPLATES CONFIGURATION
# ================================================================
EMAIL_COMPANY_NAME=Ecommerce App
EMAIL_COMPANY_LOGO=https://placehold.co/80x80/3b82f6/ffffff?text=EAPP
EMAIL_SUPPORT_EMAIL=support@yourdomain.com
EMAIL_LOGIN_URL=http://localhost:4000/app/login
EMAIL_VERIFY_URL=http://localhost:4000/app/verify
EMAIL_SUPPORT_URL=http://localhost:4000/app/support
EMAIL_THEME=LIGHT

# ================================================================
# SMS SERVICE - TWILIO
# ================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_SMS_ENABLED_TESTING_MODE=false
TWILIO_FALLBACK_EMAIL=true

# ================================================================
# VERIFICATION CODES CONFIGURATION
# ================================================================
VERIFICATION_CLEAN_CRON_SCHEDULE=0 0 * * *
VERIFICATION_RETENTION_DAYS=7
VERIFICATION_MAX_CONCURRENT_REQUESTS=1
VERIFICATION_LOCK_TIMEOUT=10000

# ================================================================
# GITHUB CONFIGURATION
# ================================================================
# For Semantic Release
GITHUB_TOKEN=assign_your_github_token_in_https://github.com/settings/tokens
