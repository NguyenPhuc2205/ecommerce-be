# ===========================
# ENVIRONMENT VARIABLES
# ===========================
NODE_ENV=development
APP_DOMAIN=localhost
APP_PORT=3000
APP_NAME=Ecommerce App

# ===========================
# API CONFIGURATION
# ===========================
API_KEY=your_api_key_here
API_PREFIX=/app/api
API_VERSION=v1

# ===========================
# CORS CONFIGURATION
# ===========================
# Comma-separated list of allowed origins (e.g., http://localhost:3000,http://localhost:4200)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# ===========================
# DATABASE CONFIGURATION
# ===========================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/dbname?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=ecommerce

# ===========================
# AUTH CONFIGURATION
# ===========================
JWT_ACCESS_TOKEN_SECRET=your_access_token_secret_here_at_least_32_chars
JWT_ACCESS_TOKEN_EXPIRATION_TIME=1h
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_at_least_32_chars
JWT_REFRESH_TOKEN_EXPIRATION_TIME=7d

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================
# GOOGLE CONFIGURATION
# ===========================
GOOGLE_CLIENT_ID=your_google_client_id_here

# ===========================
# SENDGRID CONFIGURATION
# ===========================
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name
DYNAMIC_TEMPLATE_ID_USER_TIMESHEET_REMINDER=your_sendgrid_template_id
DYNAMIC_TEMPLATE_ID_PM_APPROVAL_REMINDER=your_sendgrid_template_id

# ===========================
# CLOUDINARY CONFIGURATION
# ===========================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ===========================
# REDIS CONFIGURATION
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Alternative: use REDIS_URL instead of individual config
# REDIS_URL=redis://username:password@localhost:6379/0

# ===========================
# SESSION CONFIGURATION
# ===========================
SESSION_SECRET=your_session_secret_here_at_least_32_chars
SESSION_MAX_AGE=86400000

# ===========================
# RATE LIMITING
# ===========================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# ===========================
# FILE UPLOAD
# ===========================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ===========================
# ADMINISTRATOR INFORMATION
# ===========================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin1234
